<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.diogocabral.webookmark">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WeBookmarkApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_webookmark_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_webookmark_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity android:name=".ui.view.SearchActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".ui.view.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.HomeActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>